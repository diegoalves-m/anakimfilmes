<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="anakim" transaction-type="JTA">
    <jta-data-source>java:app/AnakimFilmes</jta-data-source>
    <class>edu.ifpb.dac.Categoria</class>
    <class>edu.ifpb.dac.Cliente</class>
    <class>edu.ifpb.dac.Endereco</class>
    <class>edu.ifpb.dac.Filme</class>
    <class>edu.ifpb.dac.Funcionario</class>
    <class>edu.ifpb.dac.Locacao</class>
    <class>edu.ifpb.dac.Midia</class>
    <class>edu.ifpb.dac.Pessoa</class>
    <class>edu.ifpb.dac.Reserva</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
